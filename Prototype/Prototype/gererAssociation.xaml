<Window
    x:Class="Prototype.gererAssociation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prototype"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="gérer les attributions"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10,20,10,10">
        <Label x:Name="lb_selectAsso" Content="Sélectionner une attribution :" />
        <ListView
            x:Name="lv_Attribution"
            Height="100"
            ItemsSource="{Binding Path=LesAttributions}" SelectionChanged="lv_Attribution_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=DateAttribution}" Header="Date" Width="68" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Commentaire}" Header="Commentaire" Width="200"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=UnEnseignant.NomPersonnel}" Header="Enseignant nom" Width="100"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=UnEnseignant.PrenomPersonnel}" Header="Enseignant prenom" Width="110" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=UnMateriel.NomMateriel}" Header="Materiel" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Margin="0,50,0,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="bt_ajout"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="bt_ajout_Click"
                Content="Ajouter" />
            <Button
                x:Name="bt_modif"
                Grid.Column="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="bt_modif_Click"
                Content="Modifier" />
            <Button
                x:Name="bt_supp"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Supprimer" Click="bt_supp_Click" />
        </Grid>
        <StackPanel
            x:Name="sp_categorie"
            Margin="0,15,0,0"
            Orientation="Horizontal">
            <Label Content="Catégorie :" />
            <ComboBox />
        </StackPanel>
        <StackPanel x:Name="sp_materiel" Orientation="Horizontal">
            <Label Content="Matériel :" />
            <ComboBox />
        </StackPanel>
        <StackPanel x:Name="sp_nomEns" Orientation="Horizontal">
            <Label Content="Nom enseignant :" />
            <ComboBox />
        </StackPanel>
        <StackPanel x:Name="sp_prenomEns" Orientation="Horizontal">
            <Label Content="Prénom enseignant :" />
            <ComboBox />
        </StackPanel>
        <StackPanel x:Name="sp_date" Orientation="Horizontal">
            <Label Content="Date :" />
            <DatePicker />
        </StackPanel>
        <StackPanel x:Name="sp_commentaire" Orientation="Horizontal">
            <Label Content="Commentaire :" />
            <TextBox
                MinWidth="100"
                DataContext="{Binding SelectedItem, ElementName=lv_Attribution}"
                Text="{Binding Commentaire}" />
        </StackPanel>

    </StackPanel>
</Window>
