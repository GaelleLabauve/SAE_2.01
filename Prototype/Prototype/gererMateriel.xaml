<Window
    x:Class="Prototype.gererMateriel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prototype"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="gérer le materiel"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Margin="10,20,10,10">
        <Label x:Name="lb_selectMateriel" Content="Sélectionner un matériel :" />
        <ListView
            x:Name="lv_materiel"
            Height="100"
            ItemsSource="{Binding Path=LesMateriels}">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=NomMateriel}" Header="Nom" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=CodeBarre}" Header="Code Barre" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=RefConstructeur}" Header="Référence Constructeur" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Margin="0,50,0,0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Ajouter" />
            <Button
                Grid.Column="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Modifier" />
            <Button
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="Supprimer" />
        </Grid>
        <StackPanel Margin="0,15,0,0" Orientation="Horizontal">
            <Label Content="Nom du materiél :" />
            <TextBox
                DataContext="{Binding SelectedItem, ElementName=lv_materiel}"
                MinWidth="120"
                Text="{Binding NomMateriel}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Référence du constructeur :" />
            <TextBox
                DataContext="{Binding SelectedItem, ElementName=lv_materiel}"
                Text="{Binding Refconstructeur}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Code barre :" />
            <TextBox
                Width="120"
                DataContext="{Binding SelectedItem, ElementName=lv_materiel}"
                Text="{Binding CodeBarre}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Catégorie :" />
            <ComboBox />
        </StackPanel>

    </StackPanel>
</Window>
